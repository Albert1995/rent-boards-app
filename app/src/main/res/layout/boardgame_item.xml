<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:padding="4dp"
    android:background="@drawable/border_list_item"
    >


    <ImageView
        android:id="@+id/imgBoardgame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dead Of Winter: Um Jogo de Encruzilhadas"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/lblRentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 10,00"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/lblAvalible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Dísponível" />

    </LinearLayout>
</LinearLayout>